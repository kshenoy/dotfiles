{
    "editor.cursorSurroundingLines": 3,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.fontFamily": "Iosevka",
    "editor.fontSize": 11,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.guides.indentation": false,
    "editor.inlayHints.enabled": "off",
    "editor.lineHeight": 1.5,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.scrollBeyondLastLine": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordWrapColumn": 120,
    "files.trimTrailingWhitespace": true,
    "perforce.editOnFileSave": true,
    "perforce.enableP4ConfigScanOnStartup": false,
    "perforce.hideEmptyChangelists": true,
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    "vscode-neovim.logOutputToConsole": true,
    "vscode-neovim.mouseSelectionStartVisualMode": true,
    "window.commandCenter": true,
    "window.customMenuBarAltFocus": false,
    "window.enableMenuBarMnemonics": false,
    "window.menuBarVisibility": "compact",
    "window.titleBarStyle": "custom",
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.showTabs": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "zenMode.fullScreen": false,
    "settings.cycle": [
        {
            "id": "lineNumbers", // must be unique
            "overrideWorkspaceSettings": true,
            "values": [
                {
                    "editor.lineNumbers": "off",
                },
                {
                    "editor.lineNumbers": "on",
                },
                {
                    "editor.lineNumbers": "relative",
                },
            ]
        },
        {
            "id": "indentGuides", // must be unique
            "overrideWorkspaceSettings": true,
            "values": [
                {
                    "editor.guides.indentation": true,
                },
                {
                    "editor.guides.indentation": false,
                },
            ]
        },
        {
            "id": "bracketPairs", // must be unique
            "overrideWorkspaceSettings": true,
            "values": [
                {
                    "editor.guides.bracketPairs": "active",
                },
                {
                    "editor.guides.bracketPairs": true,
                },
                {
                    "editor.guides.bracketPairs": false,
                },
            ]
        },
    ],
    "C_Cpp.clang_format_fallbackStyle": "LLVM",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "cppref.searchEngine": "DuckDuckGo",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "python.formatting.provider": "none",
    "window.zoomLevel": 1,
}