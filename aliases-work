unset -f pfop
pfop() {
  while read; do
    local d=$(sed 's/#.*$//' <<< $REPLY);
    local f=$(p4 where $d | cut -d " " -f3);
    sed "s:$d:$f:" <<< $REPLY;
  done < <(p4w opened)
}
pfu() { pf update_env "$@" && ~/bin/gentags --create && sra; }


