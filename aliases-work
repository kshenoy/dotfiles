pftop() {
  local num=10
  if (( $# > 0 )) && [[ "$1" =~ ^[0-9]+$ ]]; then
    num=$1
    shift
  fi
  p4 changes -m $num "$@" $STEM/...
}
alias pfs='p4w submit'

