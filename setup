#!/usr/bin/env bash

command cd $HOME
_xdg_config_home=${XDG_CONFIG_HOME:-$HOME/.config}
_xdg_data_home=${XDG_DATA_HOME:-$HOME/.local/share}
command mkdir -p ${_xdg_config_home} ${_xdg_data_home} ~/bin

if (( $UID == 0 )); then
  for i in dotfiles dotfiles-priv base16-fzf base16-shell; do
    [[ ! -d ${_xdg_config_home}/$i  ]] && ln -s ~kshenoy/.config/$i  ${_xdg_config_home}/$i
  done
  ln -s ~kshenoy/.local/share/bash_history ${_xdg_data_home}/bash_history
fi
